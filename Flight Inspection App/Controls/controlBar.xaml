<UserControl x:Class="Flight_Inspection_App.Controls.ControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flight_Inspection_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <UserControl.CommandBindings>
        <CommandBinding Command="MediaCommands.Play" CanExecute="Play_CanExecute" Executed="Play_Executed" />
        <CommandBinding Command="MediaCommands.Pause" CanExecute="Pause_CanExecute" Executed="Pause_Executed" />
        <CommandBinding Command="MediaCommands.Stop" CanExecute="Stop_CanExecute" Executed="Stop_Executed" />
        <CommandBinding Command="MediaCommands.FastForward" CanExecute="SpeedDown_CanExecute" Executed="SpeedDown_Executed" />
        <CommandBinding Command="MediaCommands.FastForward" CanExecute="SpeedUp_CanExecute" Executed="SpeedUp_Executed" />
    </UserControl.CommandBindings>
    <Grid>
        <ToolBar Grid.Row="1" Height="40" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <Separator />
            <Button Command="{Binding PlayTheFlight}" Click="Button_Click">
                <Image Source="/Controls/ControlImages/Play-icon.png" Height="20" Width="20" Margin="5,0,0,0"/>
            </Button>
            <Button Command="{Binding PauseTheFlight}" Click="Button_Click">
                <Image Source="/Controls/ControlImages/Pause-icon.png" Height="20" Width="20" Margin="5,0,0,0" />
            </Button>
            <Button Command="{Binding StopTheFlight}" Click="Button_Click">
                <Image Source="/Controls/ControlImages/Stop-icon.png" Height="20" Width="20"  Margin="5,0,0,0"/>
            </Button>
            <Slider x:Name="sliProgress" Maximum="{Binding VM_FlightTime}" Minimum="0" Width="500" Height="20"
                   Value="{Binding VM_CurrentFlightTime, Mode=TwoWay}" />
            <TextBlock x:Name="MinTimeLeft" Height="18" Margin="5,0,0,0" Text="{Binding VM_FlightTimeMin,Mode=OneWay}"></TextBlock>
            <TextBlock x:Name="Dots" Text=":" Height="20"></TextBlock>
            <TextBlock x:Name="SecTimeLeft" Height="18" Text="{Binding VM_FlightTimeSec,Mode=OneWay}"/>
            <Button Command="{Binding DecreaseTheSpeed}" Click="Button_Click" Height="26" Width="29" Margin="1,0,0,0">

                <Image Source="/Controls/ControlImages/math-minus-icon.png" Height="20" Width="25" Margin="5,0,1,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>

            </Button>
            <TextBlock x:Name="speed" Height="18"  Text="{Binding VM_VideoSpeed,Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Width="22"></TextBlock>
            <Button Command="{Binding IncreaseTheSpeed}" Click="Button_Click" Height="26" Width="29" Margin="1,0,0,0">
                <Image Source="/Controls/ControlImages/math-add-icon.png" Height="20" Width="20" Margin="-20,0,-20,0"/>
            </Button>


        </ToolBar>

    </Grid>
</UserControl>