<UserControl x:Class="Flight_Inspection_App.Controls.FeaturesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flight_Inspection_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="170">
    <Grid>
        <!--<DockPanel Margin="10">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">

            </WrapPanel>
            <ListBox Name="lbFeaturesNames" />
        </DockPanel>-->

        <ListBox Name="lbFeaturesNames" HorizontalContentAlignment="Stretch" SelectedItem="{Binding Path=VM_IntresingFeature}" ItemsSource="{Binding VM_FeaturesNames}" Foreground="#FFFDFDFD">
            <ListBox.Background>
                <ImageBrush ImageSource="/Controls/secondPart.PNG"/>
            </ListBox.Background>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <TextBlock Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
